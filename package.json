{
  "name": "roachy",
  "version": "0.0.2",
  "author": "StupidIncarnate",
  "scripts": {
    "test": "mocha test/unit/**/*.test.js --require @babel/register --reporter mocha-junit-reporter",
    "prebuild": "npm run test",
    "build": "babel src --out-dir dist",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.1",
    "npm-package-arg": "^6.1.0",
    "npmi": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0"
  },
  "engine": {
    "node": "10.8.0"
  },
  "description": "Handles convoluted monolith package.json locations for optimized docker deploys",
  "main": "lib/index.js",
  "bin": {
    "init": "./dist/commands/init",
    "add": "./dist/commands/add"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StupidIncarnate/roachy.git"
  },
  "keywords": [
    "monorepo",
    "clutter",
    "infinite-package.json"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StupidIncarnate/roachy/issues"
  },
  "homepage": "https://github.com/StupidIncarnate/roachy#readme"
}
